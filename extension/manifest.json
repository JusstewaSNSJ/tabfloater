{
  "name": "TabFloater",
  "version": "1.0",
  "description": "Extract your tabs to a floating panel",
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "floater.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TabFloater",
    "default_icon": {
      "16": "images/icons/16.png",
      "32": "images/icons/32.png",
      "48": "images/icons/48.png",
      "128": "images/icons/128.png"
    }
  },
  "commands": {
    "key-down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Float tab / move tab down"
    },
    "key-up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Unfloat tab / move tab up"
    },
    "key-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Move tab left"
    },
    "key-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Move tab right"
    }
  },
  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "manifest_version": 2
}